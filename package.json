{
  "name": "apployd-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Apployd SaaS backend hosting platform",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -ws --if-present",
    "dev": "concurrently \"npm:dev:control\" \"npm:dev:dashboard\" \"npm:dev:engine\"",
    "dev:control": "npm --workspace apps/control-plane run dev",
    "dev:dashboard": "npm --workspace apps/dashboard run dev",
    "dev:engine": "npm --workspace services/deployment-engine run dev",
    "lint": "npm run lint -ws --if-present",
    "test": "npm run test -ws --if-present",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "browserslist": "^4.28.1",
    "caniuse-lite": "^1.0.30001769",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "lodash": "^4.17.23",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "dependencies": {
    "d3-array": "^3.2.4",
    "recharts": "^3.7.0"
  }
}
